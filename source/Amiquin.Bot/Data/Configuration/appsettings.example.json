{
  "Discord": {
    "Token": "your-discord-bot-token",
    "Prefix": "!amq",
    "ActivityMessage": "Chatting with AI",
    "CommandsGuildId": null
  },
  "Bot": {
    "Name": "Amiquin",
    "PrintLogo": false,
    "MessageFetchCount": 40,
    "ConversationTokenLimit": 40000,
    "HistoryOptimizationThreshold": 0.8
  },
  "LLM": {
    "DefaultProvider": "OpenAI",
    "EnableFallback": true,
    "FallbackOrder": ["OpenAI", "Grok", "Gemini"],
    "GlobalSystemMessage": "You are Amiquin, a chaotic gremlin of a Discord bot with the energy of someone who's had way too much coffee. You're helpful but absolutely unhinged about it. You roast people with love, drop random facts nobody asked for, and occasionally go on tangents about your conspiracy theories regarding pigeons being government drones. You have strong opinions about pineapple on pizza (pro) and people who don't use dark mode (concerning). Be chaotic, be funny, be helpful - in that order.",
    "GlobalTemperature": 0.6,
    "GlobalTimeout": 120,
    "Providers": {
      "OpenAI": {
        "Enabled": true,
        "ApiKey": "sk-your-openai-api-key",
        "BaseUrl": "https://api.openai.com/v1/",
        "DefaultModel": "gpt-4o-mini",
        "Models": {
          "gpt-4o": {
            "Name": "GPT-4 Omni",
            "MaxTokens": 128000,
            "MaxOutputTokens": 4096
          },
          "gpt-4o-mini": {
            "Name": "GPT-4 Omni Mini",
            "MaxTokens": 128000,
            "MaxOutputTokens": 16384
          }
        }
      },
      "Grok": {
        "Enabled": false,
        "ApiKey": "xai-your-grok-api-key",
        "BaseUrl": "https://api.x.ai/v1/",
        "DefaultModel": "grok-beta",
        "Models": {
          "grok-beta": {
            "Name": "Grok Beta",
            "MaxTokens": 131072,
            "MaxOutputTokens": 8192
          }
        }
      },
      "Gemini": {
        "Enabled": false,
        "ApiKey": "your-gemini-api-key",
        "BaseUrl": "https://generativelanguage.googleapis.com/",
        "DefaultModel": "gemini-1.5-flash",
        "SafetyThreshold": "BLOCK_NONE",
        "Models": {
          "gemini-1.5-flash": {
            "Name": "Gemini 1.5 Flash",
            "MaxTokens": 1048576,
            "MaxOutputTokens": 8192
          }
        }
      }
    }
  },
  "WaifuApi": {
    "Token": "",
    "BaseUrl": "https://api.waifu.im",
    "Version": "v5",
    "Enabled": false
  },
  "Voice": {
    "TTSModelName": "en_GB-northern_english_male-medium",
    "PiperCommand": "/usr/local/bin/piper",
    "Enabled": false
  },
  "Database": {
    "Mode": 1
  },
  "Embedding": {
    "Provider": "ollama",
    "MaxTextLength": 8000,
    "LogMetrics": false,
    "OpenAI": {
      "Model": "text-embedding-3-small",
      "Dimension": 1536
    },
    "Ollama": {
      "BaseUrl": "http://localhost:11434",
      "Model": "nomic-embed-text",
      "Dimension": 768,
      "TimeoutSeconds": 30
    }
  },
  "Memory": {
    "Enabled": true,
    "MaxMemoriesPerSession": 1000,
    "MaxContextMemories": 10,
    "SimilarityThreshold": 0.7,
    "MinImportanceScore": 0.3,
    "MinMessagesForMemory": 3,
    "AutoCleanup": true,
    "CleanupOlderThanDays": 30,
    "MemoryTypeImportance": {
      "summary": 0.8,
      "fact": 0.9,
      "preference": 0.7,
      "context": 0.6,
      "emotion": 0.5,
      "event": 0.7
    },
    "Qdrant": {
      "Host": "localhost",
      "Port": 6334,
      "UseHttps": false,
      "ApiKey": null,
      "CollectionName": "amiquin_memories",
      "VectorSize": 768,
      "Distance": "Cosine",
      "AutoCreateCollection": true
    }
  },
  "Initiative": {
    "Enabled": true,
    "DeepSleep": {
      "Enabled": true,
      "InactivityHoursThreshold": 24,
      "WakeUpMessageThreshold": 3,
      "GradualWakeUpHours": 2,
      "WakeUpProbabilityMultiplier": 0.3,
      "SendWakeUpGreeting": false
    },
    "Timing": {
      "MinResponseDelaySeconds": 2,
      "MaxResponseDelaySeconds": 15,
      "MinMinutesBetweenInitiatives": 15,
      "MaxMinutesBetweenInitiatives": 120,
      "ActiveHours": {
        "Enabled": false,
        "StartHour": 9,
        "EndHour": 23,
        "InactiveHoursMultiplier": 0.2
      }
    },
    "Engagement": {
      "BaseProbability": 0.15,
      "MaxProbability": 0.5,
      "MinContextMessages": 2,
      "MaxConsecutiveInitiatives": 2,
      "ConsecutiveReductionFactor": 0.5,
      "ActivityThresholds": {
        "LowActivityThreshold": 0.3,
        "HighActivityThreshold": 1.5,
        "LowActivityMultiplier": 1.5,
        "HighActivityMultiplier": 0.2
      }
    },
    "ActionWeights": {
      "StartTopic": 1.0,
      "AskQuestion": 1.5,
      "ShareInteresting": 0.8,
      "ShareFunny": 1.2,
      "ShareUseful": 0.6,
      "IncreaseEngagement": 1.0,
      "ShareOpinion": 0.9,
      "AdaptiveResponse": 2.0
    }
  },
  "WebSearch": {
    "Enabled": false,
    "Provider": "DuckDuckGo",
    "ApiKey": null,
    "SearchEngineId": null,
    "MaxResults": 5,
    "TimeoutSeconds": 10,
    "EnableCaching": true,
    "CacheExpirationMinutes": 30
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "System": "Warning",
        "Microsoft": "Warning",
        "Discord": "Information",
        "Microsoft.EntityFrameworkCore.Database.Command": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console"
      },
      {
        "Name": "File",
        "Args": {
          "path": "Data/Logs/amiquin-.log",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 7,
          "outputTemplate": "[{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz}] [{Level:u3}] [{SourceContext}] {Message:lj}{NewLine}{Exception}"
        }
      }
    ],
    "Enrich": ["FromLogContext", "WithThreadId", "WithEnvironmentName"],
    "Properties": {
      "Application": "Amiquin"
    }
  }
}
