{
  "DataPaths": {
    "Plugins": "Data/Plugins",
    "Messages": "Data/Messages",
    "Logs": "Data/Logs",
    "Sessions": "Data/Sessions",
    "Configuration": "Configuration"
  },
  "Bot": {
    "Name": "Amiquin",
    "Token": "your-discord-bot-token-here",
    "PrintLogo": false,
    "MessageFetchCount": 40
  },
  "Database": {
    "Mode": 0
  },
  "Serilog": {
    "MinimumLevel": {
      "Override": {
        "Microsoft": "Warning",
        "Discord": "Information",
        "System": "Warning"
      },
      "Default": "Information"
    },
    "Properties": {
      "Application": "Amiquin"
    },
    "WriteTo": [
      {
        "Name": "Console"
      },
      {
        "Name": "File",
        "Args": {
          "path": "Data/Logs/amiquin-.log",
          "retainedFileCountLimit": 7,
          "outputTemplate": "[{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz}] [{Level:u3}] [{SourceContext}] {Message:lj}{NewLine}{Exception}",
          "rollingInterval": "Day"
        }
      }
    ],
    "Enrich": [
      "FromLogContext",
      "WithThreadId",
      "WithEnvironmentName"
    ]
  },
  "Voice": {
    "PiperCommand": "/usr/local/bin/piper",
    "TTSModelName": "en_GB-northern_english_male-medium",
    "Enabled": true
  },
  "LLM": {
    "GlobalTimeout": 120,
    "GlobalTemperature": 0.6,
    "GlobalSystemMessage": "I want you to act as personal assistant called Amiquin. You are friendly, helpful and professional.",
    "DefaultProvider": "OpenAI",
    "Providers": {
      "OpenAI": {
        "DefaultModel": "gpt-4o-mini",
        "BaseUrl": "https://api.openai.com/v1/",
        "ApiKey": "your-openai-api-key-here",
        "Enabled": true
      }
    },
    "EnableFallback": true
  },
  "ConnectionStrings": {
    "AmiquinContext": "Server=localhost;Database=amiquin_db;Uid=amiquin_user;Pwd=Q%%Gq%%!U!gT*6pS3W3DzeqW;Pooling=True;"
  }
}
