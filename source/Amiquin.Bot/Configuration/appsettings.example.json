{
  "Discord": {
    "Token": "your-discord-bot-token",
    "Prefix": "!amq",
    "ActivityMessage": "Chatting with AI",
    "CommandsGuildId": null
  },
  "Bot": {
    "Name": "Amiquin",
    "PrintLogo": false,
    "MessageFetchCount": 40,
    "MaxTokens": 20000
  },
  "LLM": {
    "DefaultProvider": "OpenAI",
    "EnableFallback": true,
    "FallbackOrder": ["OpenAI", "Grok", "Gemini"],
    "GlobalSystemMessage": "I want you to act as personal assistant called Amiquin. You are friendly, helpful and professional.",
    "GlobalTemperature": 0.6,
    "GlobalTimeout": 120,
    "Providers": {
      "OpenAI": {
        "Enabled": true,
        "ApiKey": "sk-your-openai-api-key",
        "BaseUrl": "https://api.openai.com/v1/",
        "DefaultModel": "gpt-4o-mini",
        "Models": {
          "gpt-4o": {
            "Name": "GPT-4 Omni",
            "MaxTokens": 128000,
            "MaxOutputTokens": 4096,
            "SystemMessage": null,
            "Temperature": null
          },
          "gpt-4o-mini": {
            "Name": "GPT-4 Omni Mini",
            "MaxTokens": 128000,
            "MaxOutputTokens": 16384,
            "SystemMessage": null,
            "Temperature": null
          },
          "gpt-4-turbo": {
            "Name": "GPT-4 Turbo",
            "MaxTokens": 128000,
            "MaxOutputTokens": 4096,
            "SystemMessage": null,
            "Temperature": null
          },
          "gpt-4": {
            "Name": "GPT-4",
            "MaxTokens": 8192,
            "MaxOutputTokens": 4096,
            "SystemMessage": null,
            "Temperature": null
          }
        }
      },
      "Grok": {
        "Enabled": false,
        "ApiKey": "xai-your-grok-api-key",
        "BaseUrl": "https://api.x.ai/v1/",
        "DefaultModel": "grok-3",
        "Models": {
          "grok-3": {
            "Name": "Grok 3 - Latest Stable",
            "MaxTokens": 131072,
            "MaxOutputTokens": 8192,
            "SystemMessage": null,
            "Temperature": null
          },
          "grok-3-mini": {
            "Name": "Grok 3 Mini - Fast & Efficient",
            "MaxTokens": 131072,
            "MaxOutputTokens": 4096,
            "SystemMessage": null,
            "Temperature": null
          },
          "grok-4-0709": {
            "Name": "Grok 4 (July 2024) - Most Advanced",
            "MaxTokens": 131072,
            "MaxOutputTokens": 8192,
            "SystemMessage": null,
            "Temperature": null
          },
          "grok-beta": {
            "Name": "Grok Beta - Experimental",
            "MaxTokens": 131072,
            "MaxOutputTokens": 4096,
            "SystemMessage": null,
            "Temperature": null
          }
        }
      },
      "Gemini": {
        "Enabled": false,
        "ApiKey": "your-gemini-api-key",
        "BaseUrl": "https://generativelanguage.googleapis.com/",
        "DefaultModel": "gemini-1.5-flash",
        "SafetyThreshold": "BLOCK_NONE",
        "Models": {
          "gemini-1.5-pro": {
            "Name": "Gemini 1.5 Pro",
            "MaxTokens": 2097152,
            "MaxOutputTokens": 8192,
            "SystemMessage": null,
            "Temperature": null
          },
          "gemini-1.5-flash": {
            "Name": "Gemini 1.5 Flash",
            "MaxTokens": 1048576,
            "MaxOutputTokens": 8192,
            "SystemMessage": null,
            "Temperature": null
          },
          "gemini-1.5-flash-8b": {
            "Name": "Gemini 1.5 Flash 8B",
            "MaxTokens": 1048576,
            "MaxOutputTokens": 8192,
            "SystemMessage": null,
            "Temperature": null
          },
          "gemini-pro": {
            "Name": "Gemini Pro",
            "MaxTokens": 32768,
            "MaxOutputTokens": 8192,
            "SystemMessage": null,
            "Temperature": null
          }
        }
      }
    }
  },
  "External": {
    "NewsApiUrl": "https://inshorts.com/"
  },
  "Voice": {
    "TTSModelName": "en_GB-northern_english_male-medium",
    "PiperCommand": "piper",
    "Enabled": true
  },
  "Database": {
    "Mode": 1,
    "ConnectionString": "Server=localhost;Port=3306;Database=${AMQ_DB_NAME};Uid=${AMQ_DB_USER};Pwd=${AMQ_DB_USER_PASSWORD};SslMode=None;AllowPublicKeyRetrieval=True;Pooling=True;",
    "SQLitePath": "Data Source=/Amiquin/Data/Amiquin.db",
    "LogsPath": "/Amiquin/Data/Logs"
  },
  "ConnectionStrings": {
    "AmiquinContext": "Data Source=Data/Database/amiquin.db"
  },
  "DataPaths": {
    "Logs": "Data/Logs",
    "Messages": "Data/Messages",
    "Sessions": "Data/Sessions",
    "Plugins": "Data/Plugins",
    "Configuration": "Configuration"
  },
  "SessionManagement": {
    "MaxSessionsPerUser": 5,
    "InactivityTimeoutMinutes": 120,
    "CleanupIntervalMinutes": 30,
    "MaxHistoryLength": 50
  },
  "JobManager": {
    "HealthCheckIntervalSeconds": 300,
    "MaxPendingJobs": 50,
    "MaxPendingStreams": 25,
    "MaxTimeoutMonitors": 25,
    "DefaultTimeoutSeconds": 300,
    "MaxQueueTimeoutSeconds": 60,
    "EnableAutoRestart": true,
    "DefaultMaxRetryAttempts": 3,
    "MinimumJobIntervalSeconds": 5,
    "MaximumJobIntervalSeconds": 86400
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "System": "Warning",
        "Microsoft": "Warning",
        "Discord": "Information",
        "Microsoft.EntityFrameworkCore.Database.Command": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console"
      },
      {
        "Name": "File",
        "Args": {
          "path": "Data/Logs/amiquin-.log",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 7,
          "outputTemplate": "[{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz}] [{Level:u3}] [{SourceContext}] {Message:lj}{NewLine}{Exception}"
        }
      }
    ],
    "Enrich": ["FromLogContext", "WithThreadId", "WithEnvironmentName"],
    "Properties": {
      "Application": "Amiquin"
    }
  }
}
