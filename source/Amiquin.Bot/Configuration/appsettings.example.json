{
  "Discord": {
    "Token": "your-discord-bot-token",
    "Prefix": "!amq",
    "ActivityMessage": "Chatting with AI",
    "CommandsGuildId": null
  },
  "Bot": {
    "Token": "your-discord-bot-token",
    "OpenAIKey": "your-openai-api-key",
    "MessageFetchCount": 40,
    "MaxTokens": 20000
  },
  "Chat": {
    "AuthToken": "your-openai-api-key",
    "SystemMessage": "I want you to act as personal assistant called Amiquin. You are friendly, helpful and professional.",
    "TokenLimit": 2000,
    "Enabled": true,
    "Model": "gpt-4o-mini"
  },
  "External": {
    "NewsApiUrl": "https://inshorts.com/",
    "PiperCommand": "piper",
    "ModelName": "en_GB-northern_english_male-medium"
  },
  "Database": {
    "Mode": 1,
    "ConnectionString": "Server=localhost;User=YourUser;Password=YourPassword;Database=YourDB;sslmode=none;AllowPublicKeyRetrieval=True",
    "SQLitePath": "Data Source=/Amiquin/Data/Amiquin.db",
    "LogsPath": "/Amiquin/Data/Logs"
  },
  "ConnectionStrings": {
    "AmiquinContext": "Data Source=Data/Database/amiquin.db"
  },
  "DataPaths": {
    "Logs": "Data/Logs",
    "Messages": "Data/Messages",
    "Sessions": "Data/Sessions",
    "Plugins": "Data/Plugins",
    "Configuration": "Configuration"
  },
  "SessionManagement": {
    "MaxSessionsPerUser": 5,
    "InactivityTimeoutMinutes": 120,
    "CleanupIntervalMinutes": 30,
    "MaxHistoryLength": 50
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "System": "Warning",
        "Microsoft": "Warning",
        "Discord": "Information",
        "Microsoft.EntityFrameworkCore.Database.Command": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console"
      },
      {
        "Name": "File",
        "Args": {
          "path": "Data/Logs/amiquin-.log",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 7,
          "outputTemplate": "[{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz}] [{Level:u3}] [{SourceContext}] {Message:lj}{NewLine}{Exception}"
        }
      }
    ],
    "Enrich": ["FromLogContext", "WithThreadId", "WithEnvironmentName"],
    "Properties": {
      "Application": "Amiquin"
    }
  }
}