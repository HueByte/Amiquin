{
	"$schema": "https://raw.githubusercontent.com/dotnet/docfx/main/schemas/docfx.schema.json",
	"metadata": [
		{
			"src": [
				{
					"src": "../source",
					"files": [
						"Amiquin.Core/**/*.csproj",
						"Amiquin.Bot/**/*.csproj",
						"Amiquin.Infrastructure/**/*.csproj"
					]
				}
			],
			"output": "_temp/api",
			"properties": {
				"TargetFramework": "net9.0"
			},
			"filter": "config/filterConfig.yml",
			"disableGitFeatures": false
		}
	],
	"build": {
		"content": [
			{
				"src": ".",
				"dest": ".",
				"files": ["toc.yml", "index.md"]
			},
			{
				"src": "../docs",
				"dest": "documentation",
				"files": ["**/*.md", "**/toc.yml"],
				"exclude": [
					"api/**",
					"build/**",
					"_site/**",
					"_temp/**",
					"**/bin/**",
					"**/obj/**",
					"**/TestResults/**"
				]
			},
			{
				"src": "api",
				"dest": "api",
				"files": ["index.md"]
			},
			{
				"src": "_temp/api",
				"dest": "api",
				"files": ["*.yml", ".manifest"]
			}
		],
		"resource": [
			{
				"files": [
					"../docs/images/**",
					"assets/**"
				]
			}
		],
		"overwrite": [
			{
				"files": ["../docs/overwrite/**/*.md"],
				"exclude": [
					"../docs/build/**",
					"_site/**",
					"_temp/**",
					"**/bin/**",
					"**/obj/**"
				]
			}
		],
		"output": "_site",
		"template": ["default", "modern", "templates/amiquin-modern"],
		"globalMetadata": {
			"_appName": "Amiquin",
			"_appTitle": "Amiquin Documentation",
			"_appLogoPath": "assets/logo.png",
			"_appFaviconPath": "assets/favicon.ico",
			"_appFooter": "<div class=\"footer-custom\"><div class=\"footer-inner\"><div class=\"footer-text\">Â© 2024 Amiquin Project</div><div class=\"footer-links\"><a href=\"https://github.com/huebyte/amiquin\" target=\"_blank\"><i class=\"fab fa-github\"></i> GitHub</a></div></div></div>",
			"_enableSearch": true,
			"_enableNewTab": true,
			"_disableNavbar": false,
			"_disableBreadcrumb": false,
			"_gitContribute": {
				"repo": "https://github.com/huebyte/amiquin",
				"branch": "main",
				"path": "docs"
			},
			"_gitUrlPattern": "github",
			"pdf": false
		}
	}
}
